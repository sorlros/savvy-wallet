// This is your Prisma schema file,
  // learn more about it in the docs: https://pris.ly/d/prisma-schema

  generator client {
    provider = "prisma-client-js"
  }

  datasource db {
    provider = "mongodb"
    url      = env("DATABASE_URL")
  }

  model User {
  id              String      @id @default(auto()) @map("_id") @db.ObjectId
  name            String?
  email           String?     @unique
  emailVerified   DateTime?
  hashedPassword  String?

  expenses         Expense[]
  calendars        Calendar[]
}

model Calendar {
  id          String      @id @default(auto()) @map("_id") @db.ObjectId
  userId      String      @db.ObjectId
  date        String      @unique

  expenses    Expense[]
  user        User        @relation(fields: [userId], references: [id])
}

model Expense {
  id              String      @id @default(auto()) @map("_id") @db.ObjectId
  userId          String      @db.ObjectId
  date            String      @unique
  transportation  Int
  communication   Int
  food            Int
  shopping        Int
  tax             Int
  accommodation   Int

  calendar        Calendar    @relation(fields: [date], references: [date])
  user            User        @relation(fields: [userId], references: [id])
}